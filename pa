};*/
struct docentes{
	int idDoc;
	char nombre[30];
	int registro;
	int idmat;
	int idalum;
	char estado;
};
struct alumnos{
	int idalum;
	char nombre[30];
	char registro[30];
	int idmat;
	int idnivel;
	char estado;
};
/*
