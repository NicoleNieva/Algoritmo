using namespace std;

int invertir(int n)
{
    int inv=0;
    while(n>0)
    {
        inv=inv*10;
        inv=inv+(n%10);
        n=n/10;
    }
    return inv;
}
void generarnum(int v[], int n)
{
    int a;
    for(int i=0;i<n;i++)
    {
        if(i<=3)
        {
            v[i]=powf(i,2);
            cout<<v[i]<<"__";
        }
        else
        {
            v[i]=powf(i,2);
            a=invertir(v[i]);
            cout<<a<<"___";
        }
    }
}
void main()
{
    int v[100],a;
    do
    {
        cout<<"ingrese tamaÃ±o";
        cin>>a;
    }while(a<0);
      
      generarnum(v,a);
      getch();
      
}

bool  palindrmo (string cad)
{
bool bandera=true;
int i,n=cad.lenght();
for(i=0;i<n/2;i++)
{
	if(cad.at(i)!=cad.at(n-1-i))
	{
		bandera=false;
		break;
	}
}
return bandera;
}

int contadormin (string cad)
{
int i,cont=0;
int car,n=cad.length();
for(i=0;i<n;i++)
{
	car=cad.at(i);
	if(car>=97&&car<=122)
		cont++;
}
return (cont);
}

void invertir (string cad)
{
char aux;
int i,n=cad.lenght();
for(i=0;i<n;i++)
{
	aux=cad.at(i);
	cad.at(i)=cad.at(n-1-i);
	cad.at(n-1-i)=aux;
}
cout <<endl<<endl<<cad;
}

float cambiobaseDec(float b,int n)
{int i=0,r,a,s=0;
	while (n > 0)
	{r = n % 10;
	n = n/10;
	a = r*pow(b,i);
	s = s+a;
	i++;
	}
	return s;
}
